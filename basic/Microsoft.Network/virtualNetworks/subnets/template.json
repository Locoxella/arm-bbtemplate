{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "[concat(resourceGroup().name, '-subnets-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name for the vnet"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Base uri of the artifacts"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Parameters for uri of the artifacts"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags for the vnet and subnet/s"
            }
        },
        "addressPrefix": {
            "type": "array",
            "metadata": {
                "description": "CIDR address for each subnet of the replica"
            }
        },
        "virtualNetworksParentREF": {
            "type": "object",
            "metadata": {
                "description": "Reference to parent virtualNetwork of this subnet"
            }
        }
    },
    "variables": {},
    "functions": [
        {
            "namespace": "ey",
            "members": {
                "shortreplica": {
                    "parameters": [
                        {
                            "name": "name",
                            "type": "array"
                        },
                        {
                            "name": "replica",
                            "type": "int"
                        }
                    ],
                    "output": {
                        "type": "int",
                        "value": "[if(greater(parameters('replica'),length(parameters('name'))),sub(parameters('replica'),length(parameters('name'))),0)]"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "comments": "El name hace el last del split del path del resource id, ya que los hijos deben nombrarse padre/hijo",
            "name": "[concat(last(split(parameters('virtualNetworksParentREF').resourceId, '/')), '/', parameters('name'))]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2017-10-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[parameters('addressPrefix')]"
            }
        }
    ],
    "outputs": {
        "subnetREF": {
            "type": "array",
            "value": ["[array(reference(parameters('name'), '2017-10-01', 'Full'))]"]
        }
    }
}