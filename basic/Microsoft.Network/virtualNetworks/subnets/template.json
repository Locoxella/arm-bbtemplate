{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": [
                "[concat(resourceGroup().name, '-subnets')]"
            ],
            "metadata": {
                "description": "Name for this resource"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Base uri of the artifacts"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Parameters for uri of the artifacts"
            }
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "description": "CIDR address for this subnet"
            }
        },
        "virtualNetworksParentREF": {
            "type": "object",
            "metadata": {
                "description": "Reference to parent virtualNetwork of this subnet"
            }
        },

    },
    "variables": {
        "virtualNetworksParentREF": "[concat(last(split(parameters('virtualNetworksParentREF').resourceId, '/' )), '/', parameters('name'))]"
    },
    "resources": [
        {
            "comments": "El name hace el last del split del path del resource id, ya que los hijos deben nombrarse padre/hijo",
            "apiVersion": "2016-06-01",
            "name": "[variables('virtualNetworksParentREF')]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[parameters('addressPrefix')]",
            }
        }
    ],
    "outputs": {
        "result": {
            "type": "object",
            "value": "[reference(parameters('name'), '2016-06-01', 'Full')]"
        }
    }
}