{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "array",
            "defaultValue": [
                "[concat(resourceGroup().name, '-subnets-', uniqueString(resourceGroup().id))]"
            ],
            "metadata": {
                "description": "Name for the vnet"
            }
        },
        "replica": {
            "type": "int",
            "defaultValue": "[length(parameters('name'))]",
            "metadata": {
                "description": "Amount of resources like this to deploy."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Base uri of the artifacts"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Parameters for uri of the artifacts"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags for the vnet and subnet/s"
            }
        },
        "addressPrefix": {
            "type": "array",
            "metadata": {
                "description": "CIDR address for each subnet of the replica"
            }
        },
        "virtualNetworksParentREF": {
            "type": "object",
            "metadata": {
                "description": "Reference to parent virtualNetwork of this subnet"
            }
        }
    },
    "variables": {},
    "functions": [
        {
            "namespace": "ey",
            "members": {
                "shortreplica": {
                    "parameters": [
                        {
                            "name": "name",
                            "type": "array"
                        },
                        {
                            "name": "replica",
                            "type": "int"
                        }
                    ],
                    "output": {
                        "type": "int",
                        "value": "[if(greater(parameters('replica'),length(parameters('name'))),sub(parameters('replica'),length(parameters('name'))),0)]"
                    }
                }
            }
        }
    ],
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "name": "[concat('replicator-', copyIndex('replicated'))]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "replicated",
                "mode": "parallel",
                "count": "[parameters('replica')]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('basic/Microsoft.Network/virtualNetworks/subnets/template.json', parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "name": {
                        "value": "[parameters('name')[copyIndex('replicated')]]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "_artifactsLocationSasToken": {
                        "value": "[parameters('_artifactsLocationSasToken')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    },
                    "addressPrefix": {
                        "value": "[parameters('addressPrefix')]"
                    },
                    "virtualNetworksParentREF": {
                        "value": "[parameters('virtualNetworksParentREF')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "virtualNetworks/subnetREF": {
            "type": "array",
            "value": ["[reference('replicator-0', '2016-02-01', 'Full').outputs.subnetREF.value]"]
        }
    }
}