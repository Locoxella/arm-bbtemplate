{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": [
                "[concat(resourceGroup().name, '-nsg')]"
            ],
            "metadata": {
                "description": "Name for this resource"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Base uri of the artifacts"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "Parameters for uri of the artifacts"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags for this resources"
            }
        },
        "ruleSet": {
            "type": "object",
            "defaultValue": "[json('null')]",
            "metadata": {
                "description": "Security Rules"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('name')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties": {
                "securityRules": "[parameters('ruleSet')]"
            }
        }
    ],
    "outputs": {
        "result": {
            "type": "object",
            "value": "[reference(parameters('name'), '2018-02-01', 'Full')]"
        }
    }
}