{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
           "type": "string",
           "metadata": {
                "description": "Name for Public IP Address"
            }
        },
        "properties": {
           "type": "object",
           "defaultValue": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('name')]"
                }
           },
           "metadata": {
                "description": "Properties of Public IP Address"
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "Tags for this deployment {tagname:'value',...}"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('name')]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "properties":  "[parameters('properties')]"
        }
    ],
    "outputs": {
        "publicIPAddressesREF": "[reference(parameters('name'), '2018-02-01', 'Full')]"
    }
}